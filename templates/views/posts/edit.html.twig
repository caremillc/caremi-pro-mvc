{% extends 'layouts/app.html.twig' %}

{% block main %}
<h1>Edit Post</h1>

<form action="{{ url('/posts/{{ post.id }}/update') }}" method="post" enctype="multipart/form-data">
    {{ csrf() }}
    {{ method('PUT') }}

    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="title" type="text" class="form-control" id="title" value="{{ post.title }}" required>
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="description" id="description" class="form-control" rows="6" required>{{ post.body }}</textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Current Image</label><br>
        {% if post.image %}
            <div class="image-preview mb-2">
                <img id="preview" src="{{ asset('storage/images/' ~ post.image) }}" alt="Current Image" class="img-fluid" style="max-width: 300px; border-radius: 10px;">
            </div>
            <button type="button" class="btn btn-outline-primary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#editImageModal">
                <i class="bi bi-pencil-square"></i> Edit Image
            </button>
            <button type="button" class="btn btn-outline-danger btn-sm" id="removeImageBtn">
                <i class="bi bi-trash"></i> Remove Image
            </button>
        {% else %}
            <p>No image uploaded.</p>
            <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editImageModal">
                <i class="bi bi-upload"></i> Upload Image
            </button>
        {% endif %}
    </div>

    <input type="hidden" name="remove_image" id="removeImageFlag" value="0">

    <button type="submit" class="btn btn-primary mt-3">Update Post</button>
    <a href="/posts" class="btn btn-secondary mt-3">Cancel</a>
</form>

<!-- Image Edit Modal -->
<div class="modal fade" id="editImageModal" tabindex="-1" aria-labelledby="editImageModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content shadow-lg rounded-4">
      <div class="modal-header bg-light">
        <h5 class="modal-title" id="editImageModalLabel">Edit Image</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        <div id="modalImagePreview">
          {% if post.image %}
            <img id="modal-preview" src="{{ asset('storage/images/' ~ post.image) }}" alt="Preview" class="img-fluid rounded-3 mb-3" style="max-width: 300px;">
          {% else %}
            <p class="text-muted">No image selected yet.</p>
          {% endif %}
        </div>

        <input name="image" type="file" class="form-control mt-3" id="modalImageInput" accept="image/*" onchange="previewImage(event)">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="saveImageBtn">Save Image</button>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap Icons & Scripts -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<script>
document.addEventListener('DOMContentLoaded', () => {
    const fileInput = document.getElementById('modalImageInput');
    const modalPreview = document.getElementById('modal-preview');
    const mainPreview = document.getElementById('preview');
    const saveButton = document.getElementById('saveImageBtn');
    const removeButton = document.getElementById('removeImageBtn');
    const removeFlag = document.getElementById('removeImageFlag');

    // --- Image Preview in Modal ---
    window.previewImage = function(event) {
        const file = event.target.files[0];
        if (!file) return;
        const reader = new FileReader();
        reader.onload = function(e) {
            if (modalPreview) {
                modalPreview.src = e.target.result;
            } else {
                const img = document.createElement('img');
                img.id = 'modal-preview';
                img.className = 'img-fluid rounded-3 mb-3';
                img.style.maxWidth = '300px';
                img.src = e.target.result;
                document.getElementById('modalImagePreview').innerHTML = '';
                document.getElementById('modalImagePreview').appendChild(img);
            }
        };
        reader.readAsDataURL(file);
    };

    // --- Save Image Preview to Main Form ---
    saveButton.addEventListener('click', () => {
        const file = fileInput.files[0];
        if (file && mainPreview) {
            const reader = new FileReader();
            reader.onload = (e) => {
                mainPreview.src = e.target.result;
                mainPreview.style.display = 'block';
            };
            reader.readAsDataURL(file);
            removeFlag.value = '0'; // reset remove flag
        }
        const modal = bootstrap.Modal.getInstance(document.getElementById('editImageModal'));
        modal.hide();
    });

    // --- Remove Image ---
    if (removeButton) {
        removeButton.addEventListener('click', () => {
            if (confirm('Are you sure you want to remove this image?')) {
                if (mainPreview) {
                    mainPreview.src = '';
                    mainPreview.style.display = 'none';
                }
                removeFlag.value = '1';
            }
        });
    }
});
</script>
{% endblock %}
