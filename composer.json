{
    "name": "caremillc/caremi-pro-mvc",
    "description": "The skeleton application for the Caremi framework.",
    "type": "project",
    "license": "MIT",
    "homepage": "https://caremi.com",
    "support": {
        "issues": "https://github.com/caremillc/caremi-pro-mvc/issues",
        "source": "https://github.com/caremillc/caremi-pro-mvc"
    },
    "authors": [
        {
            "name": "ikoncoders",
            "email": "ikoncoders@gmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "require": {
        "php": ">= 8.2",
        "caremillc/framework-pro-mvc": "dev-main"
    },
    "require-dev": {
        "symfony/var-dumper": "6.3.x-dev"
    },
    "repositories": [
        {
            "type": "path",
            "url": "framework-pro-mvc",
            "options": {
                "symlink": true
            }
        }
    ],
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "@php bootstrap/install.php"
        ],
        "post-update-cmd": [
            "@php caremi storage:link"
        ],
        "post-create-project-cmd": [
            "@php bootstrap/install.php"
        ]
    }
}
